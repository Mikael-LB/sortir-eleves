{% extends 'base.html.twig' %}

{% block body %}
    {# Vue permettant d'afficher les informations concernant un participant, m√©thode afficher du participantCntroller #}
    <h2>{{ participant.pseudo }}</h2>

<section>
    <table id="table-creation" class="box-shad">
        <thead>
        </thead>
        <tbody>
        <tr>
            <th class="text-left" scope="row">
                Prenom:
            </th>
            <td>{{ participant.prenom }}</td>
        </tr>

        <tr>
            <th class="text-left" scope="row">
                Nom:
            </th>
            <td>{{ participant.nom }}</td>
        </tr>

        <tr>
            <th class="text-left" scope="row">
                Telephone:
            </th>
            <td>{{ participant.telephone }}</td>
        </tr>

        <tr>
            <th class="text-left" scope="row">
                Email:
            </th>
            <td>{{ participant.email }}</td>
        </tr>

        <tr>
            <th class="text-left" scope="row">
                Campus:
            </th>
            <td>{{ participant.campus.nom }}</td>
        </tr>

        </tbody>
    </table>
</section>


    {# Lien permettant de rediriger vers la page d'accueil: page de la liste des sorties #}
    <button class="button-blue"><a href="{{ path('sortie_liste_sorties', { 'id' : participant.id }) }}" class="a-text-white">Retour</a></button>

{% endblock %}

